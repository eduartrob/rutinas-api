// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  phone        String
  region       String   @default("Desconocido")
  profileImage String?  // URL de la imagen de perfil
  fcmTokens    String[] @default([])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  routines          Routine[]
  verificationCodes VerificationCode[]
  apps              App[]
  userFiles         UserFile[]
}

model App {
  id          String   @id @default(uuid())
  name        String
  description String
  version     String
  developerId String
  releaseDate DateTime
  rate        Float    @default(0.0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  developer User     @relation(fields: [developerId], references: [id], onDelete: Cascade)
  appFile   AppFile?
}

model AppFile {
  id          String   @id @default(uuid())
  appId       String   @unique
  iconUrl     String
  iconKey     String
  appFileUrl  String
  appFileKey  String
  appFileSize Int
  screenshots Json     @default("[]")
  uploadedAt  DateTime @default(now())

  app App @relation(fields: [appId], references: [id], onDelete: Cascade)
}

model UserFile {
  id          String   @id @default(uuid())
  userId      String
  key         String
  url         String
  contentType String
  uploadedAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Routine {
  id         String   @id @default(uuid())
  name       String
  userId     String
  isActive   Boolean  @default(false)
  categories String[] @default([])
  color      String?  // Hex color for routine customization
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  habits Habit[]
}

model Habit {
  id        String  @id @default(uuid())
  name      String
  category  String
  time      String?
  emoji     String  @default("ðŸ“Œ")
  routineId String

  routine     Routine           @relation(fields: [routineId], references: [id], onDelete: Cascade)
  completions HabitCompletion[]
}

model HabitCompletion {
  id          String   @id @default(uuid())
  habitId     String
  userId      String
  completedAt DateTime @default(now())
  date        DateTime // The date this completion is for (without time)

  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, userId, date]) // One completion per habit per user per day
}

model BlacklistedToken {
  id        String   @id @default(uuid())
  token     String   @unique
  revokedAt DateTime @default(now())
  expiresAt DateTime?
}

model VerificationCode {
  id        String   @id @default(uuid())
  userId    String   @unique
  code      Int
  expiresAt DateTime
  createdAt DateTime @default(now())
  used      Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Popular routines that users can add to their account
model PopularRoutine {
  id          String   @id @default(uuid())
  name        String
  description String?
  emoji       String   @default("ðŸ“‹")
  categories  String[] @default([])
  usersCount  Int      @default(0)  // How many users have added this routine
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  habits PopularHabit[]
}

model PopularHabit {
  id               String  @id @default(uuid())
  name             String
  emoji            String  @default("ðŸ“Œ")
  category         String
  time             String?
  order            Int     @default(0)
  popularRoutineId String

  popularRoutine PopularRoutine @relation(fields: [popularRoutineId], references: [id], onDelete: Cascade)
}
